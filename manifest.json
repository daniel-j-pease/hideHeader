{
  "manifest_version": 2,

  "name": "Header Hider",
  "description": "Why are you so enormous?",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://imgur.com/*"],
      "js": ["hideHead.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
